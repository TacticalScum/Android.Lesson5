<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="myTheme.Lesson4" parent="Theme.MaterialComponents">
        <item name="android:background">@color/white</item>
        <item name="materialButtonStyle">@style/buttonColor</item>
        <item name="android:editTextColor">#FF3949AB</item>
        <item name="radioButtonStyle">@style/radioButtonColor</item>
        <item name="android:editTextBackground">@android:color/transparent</item>
        <item name="android:textColor" tools:ignore="DuplicateDefinition">#FF3949AB</item>
    </style>

    <style name="buttonColor" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">#FF3949AB</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>

    <style name="radioButtonColor" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">#FF3949AB</item>
    </style>


    <style name="myNightTheme.Lesson4" parent="Theme.MaterialComponents">
        <item name="android:background">@color/cardview_dark_background</item>
        <item name="materialButtonStyle">@style/buttonColorNight</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="android:radioButtonStyle">@style/radioButtonColorNight</item>
        <item name="android:editTextBackground">@android:color/transparent</item>
        <item name="android:textColor" tools:ignore="DuplicateDefinition">@color/white</item>
    </style>


    <style name="buttonColorNight" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">#FF9800</item>
    </style>

    <style name="radioButtonColorNight" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>